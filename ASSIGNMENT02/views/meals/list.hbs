<h2 class="mb-3">My Meals</h2>

<a href="/meals/create" class="btn btn-primary mb-3">Add New Meal</a>

{{#if meals.length}}
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead>
        <tr>
          <th>Meal</th>
          <th>Calories</th>
          <th>Protein</th>
          <th>Carbs</th>
          <th>Fat</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each meals}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.protein}}</td>
            <td>{{this.carbs}}</td>
            <td>{{this.fat}}</td>
            <td class="text-end">
              <a href="/meals/{{this._id}}/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
              <a href="/meals/{{this._id}}/delete" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p>You havenâ€™t added any meals yet.</p>
{{/if}}
